<div class="centered-container">
  <div class="header-row">
    <div class="header-title">
      &lt;<span style="color:#4caf50">c</span>/<span class="note-red">note</span>&gt;
    </div>
    <div class="header-logo">
      <span role="img" aria-label="moon">ðŸŒ—</span>
    </div>
    <div class="header-logout">&lt;log/out&gt;</div>
  </div>
  <h1 class="main-header">[pad]</h1>
  <% if (typeof error !== 'undefined' && error) { %>
    <div class="error"><%= error %></div>
  <% } %>
  <% if (note) { %>
    <form action="/notes/<%= note._id %>?_method=PUT" method="POST" class="note-form">
      <label>[tag]</label>
      <input type="text" name="category" value="<%= note.category %>" required placeholder="[tag]">
      <label>[title]</label>
      <input type="text" name="title" value="<%= note.title %>" required placeholder="[title]">
      <textarea name="body" required placeholder="!..." style="min-height:200px;"><%= note.body %></textarea>
      <button type="submit" class="btn">Update</button>
    </form>
  <% } %>
  <a href="/notes" class="btn">Back to Notes</a>
</div>
